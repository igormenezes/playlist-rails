<%= render('/layouts/menu-music') %>
<div class="container">
	<%= form_for Music.new, html: {class: 'form-horizontal'}, url: {action: 'save'}, method: 'POST' do |f| %>
		<div class="form-group">
		    <label for="name" class="col-sm-2 control-label">Music Name</label>
		    <div class="col-sm-10">
		    	<%= f.text_field :name, class: 'form-control', placeholder: 'Music Name', required: true %>
			</div>
		</div>
		<div class="form-group">
			<label for="style" class="col-sm-2 control-label">Style</label>
		    <div class="col-sm-10">
		    	<%= f.text_field :style, class: 'form-control', placeholder: 'Style', required: true %>
		    </div>	
		</div>
		<div class="form-group">
			<label for="artist" class="col-sm-2 control-label">Artist</label>
		    <div class="col-sm-10">
		    	<%= f.text_field :artist, class: 'form-control', placeholder: 'Artist', required: true %>
		    </div>	
		</div>
		<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <%= f.submit "Register", class: 'btn btn-default' %>
		    </div>
	  	</div>
	<% end %>

	<% if @music %>
		<% @music.errors.full_messages.each do |message|%>
	    	<div class="alert alert-danger">
	    		<p><%=message%></p>
	    	</div>
		<% end %>
	<% end %>
	
	<% if flash[:warning] %>
		<div class="alert alert-danger"><%= flash[:warning] %></div>
	<% end %>

	<% if flash[:notice] %>
		<div class="alert alert-success"><%= flash[:notice] %></div>
	<% end %>	  
</div>