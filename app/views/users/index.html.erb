<%= render 'layouts/menu-index'%>
<div class="container">
	<%= form_for User.new, html: {class: 'form-horizontal'}, url: {action: 'login'}, method: 'POST' do |f| %>
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">E-mail</label>
			<div class="col-sm-10">
				<%= f.text_field :email, class: 'form-control', placeholder: 'User', required: true %><br/> 
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="col-sm-2 control-label">Password</label>
			<div class="col-sm-10">
				<%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %><br/> 
	    	</div>
		</div>
		<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Login", class: 'btn btn-default' %>
			</div>
			<br /><br />
	   	 	<a class="col-sm-offset-2 col-sm-10" href="/register">Register</a>
		</div>
	<% end %>	

	<% if @user %>
		<% @user.errors.full_messages.each do |message|%>
	    	<div class="alert alert-danger">
	    		<p><%=message%></p>
	    	</div>
		<% end %>
	<% end %>

	<% if flash[:warning] %>
		<div class="alert alert-danger"><%= flash[:warning] %></div>
	<% end %>
</div>